{
  "dataset": {
    "train_dataset": "./datasets/train",
    "val_dataset": "./datasets/val",
    "max_bbox_shift": 0,
    "num_workers": 4,
    "prompt_mode": "mixed",
    "min_points": 1,
    "max_points": 3
  },
  "model": {
    "checkpoint_path": "./weights/mobile_sam.pt",
    "type": "vit_t",
    "image_size": 1024,
    "save_path": "./logs_finetune_then_distill"
  },
  "train": {
    "epochs": 300,
    "lr": 1e-5,
    "batch_size": 2,
    "val_freq": 1,
    "gradient_accumulation": 1,
    "bf16": true,
    "warmup_step": 250,
    "min_lr_ratio": 0.0,
    "resume": false,
    "early_stop_patience": 20,
    "loss_weights": {
      "bce": 1.0,
      "focal": 15,
      "dice": 1.0,
      "iou": 1.0,
      "cls": 1.0
    }
  },
  "visual": {
    "status": true,
    "save_path": "./images_finetune_then_distill",
    "IOU_threshold": 0.5,
    "save_every_n_epochs": 1
  },
  "freeze": {
    "freeze_image_encoder": false,
    "freeze_prompt_encoder": false,
    "freeze_mask_decoder": false,
    "unfreeze_epoch": 0
  },
  "distillation": {
    "enable": true,
    "use_precomputed_features": false,
    "precomputed_root": "precomputed",
    "lambda_coef": 1.0,
    "encoder_patch":      { "enable": true,  "w_l2": 1.0, "w_cos": 1.0 },
    "prompt_embed":       { "enable": true,  "w_mse": 0.7, "w_cos": 0.3 },
    "decoder_mask_token": { "enable": true,  "w_kl": 1.0, "temperature": 0.5 },
    "dense_mask_logits":  { "enable": true,  "w_kl": 0.6, "w_focal": 0.4, "gamma": 2.0 }
  },
  "teachers": [
    {
      "name": "SAM-H",
      "cfg": "configs/sam_h.yaml",
      "checkpoint": "weights/sam_vit_h_4b8939.pth",
      "weight": 0.7
    },
    {
      "name": "MobileSAM_orig",
      "cfg": "configs/mobile_sam_orig.yaml",
      "checkpoint": "weights/mobile_sam.pt",
      "weight": 0.3
    }
  ],
  "stage_schedule": [
    {
      "name": "finetune_only",
      "start_epoch": 0,
      "end_epoch": 100,
      "distillation": false,
      "lambda_coef": 0.0,
      "loss_weights": { "bce": 1.0, "focal": 15, "dice": 1.0, "iou": 1.0, "cls": 1.0 }
    },
    {
      "name": "distill_only",
      "start_epoch": 100,
      "end_epoch": 300,
      "distillation": true,
      "lambda_coef": 1.0,
      "loss_weights": { "bce": 0, "focal": 0, "dice": 0, "iou": 0, "cls": 0 }
    }
  ]
} 